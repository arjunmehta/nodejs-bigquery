{
    "compilerOptions": {
      "rootDir": ".",
      "outDir": "build",
      "resolveJsonModule": true,
      "allowJs": true,
      "lib": [
        "es2018",
        "dom"
      ],
      "esModuleInterop": true,
      "noImplicitAny": false,
      "module": "ESNext",
      "moduleResolution": "Node",
      "types": ["mocha", "node"]
    },
    "include": [
      "src/**/*",
      "src/*",
      "test/*",
      "test/**/*"
    ],
    "incremental": true 
}