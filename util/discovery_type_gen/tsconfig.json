{
    "compilerOptions": {
      "rootDir": ".",
      "outDir": "build",
      "resolveJsonModule": true,
      "allowJs": true,
      "lib": [
        "es2018",
        "dom"
      ],
      "esModuleInterop": true,
      "noImplicitAny": false,
      "allowImportingTsExtensions": true,
      "noEmit": true,
      "module": "ES6",
      "moduleResolution": "Node",
      "types": ["mocha", "node"]
    },
    "include": [
      "./src/**/*",
      "./test/**/*"
    ]
}